<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:focusable="true"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/action_bar_size"
    android:focusableInTouchMode="true"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/vpi__bright_foreground_disabled_holo_dark"
        android:layout_gravity="left"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/trailer"
        tools:text="Trailers"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/list_movie"
        android:layout_margin="2dp"
        android:scrollbars="none"
        android:layout_height="150dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/vpi__bright_foreground_disabled_holo_dark"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_gravity="left"
        android:text="@string/similar"
        android:id="@+id/tx_similar"
        tools:text="Similar Movie"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/list_similar"
        android:layout_margin="2dp"
        android:scrollbars="none"
        android:layout_height="200dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/vpi__bright_foreground_disabled_holo_dark"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_gravity="left"
        android:text="@string/similar"
        android:id="@+id/other_from"
        tools:text="Other From Raja Korong"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/list_other_from"
        android:layout_margin="2dp"
        android:scrollbars="none"
        android:layout_height="200dp"/>
</android.support.v7.widget.LinearLayoutCompat>